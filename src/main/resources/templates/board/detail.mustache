                </div>
                <form action="/reply/1/delete" method="post">
                    <button class="btn">🗑</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let liked = false;

    function toggleLike() {

        let likeBtn = document.querySelector('#likeBtn');
        let likeCountSpan = document.querySelector('#likeCount');
        let count = parseInt(likeCountSpan.innerText);

        liked = !liked;

        if (liked) {
            likeBtn.innerText = '❤️';
            likeBtn.classList.remove('btn-outline-danger');
            likeBtn.classList.add('btn-danger');
            likeBtn.style.fontSize = '2.2rem';
            likeCountSpan.innerText = count + 1;
        } else {
            likeBtn.innerText = '🤍'; // 빈 하트
            likeBtn.classList.remove('btn-danger');
            likeBtn.classList.add('btn-outline-danger');
            likeBtn.style.fontSize = '1.8rem'; // 원래 크기로
            likeCountSpan.innerText = count - 1;
        }
    }
</script>

